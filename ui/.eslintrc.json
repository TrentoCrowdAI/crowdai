{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "blockBindings": true,
      "destructuring": true,
      "classes": true,
      "jsx": true
    }
  },
  "rules": {
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "max-len": ["error", 120],
    "require-jsdoc": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "func-call-spacing": ["error", "never"],
    "space-before-function-paren": [
      0,
      {
        "asyncArrow": "always",
        "anonymous": "never",
        "named": "never"
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "commonjs": true,
    "protractor": true
  },
  "globals": {
    "inject": true,
    "__dirname": true,
    "process": true
  },
  "extends": ["standard", "plugin:react/recommended", "prettier", "google", "prettier/react", "prettier/standard"],
  "parser": "babel-eslint",
  "plugins": ["react", "prettier", "standard", "import"]
}
